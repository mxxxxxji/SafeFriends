<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_gray"
    android:orientation="vertical"
    android:weightSum="640">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="279"
        android:orientation="vertical"
        android:weightSum="279">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="119">
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="91.4"
            android:orientation="horizontal"
            android:weightSum="360">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="95">
            </FrameLayout>
            <ImageView
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="170"
                android:adjustViewBounds="true"
                android:src="@drawable/logo5" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35">
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70.6">
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="24"
        android:orientation="horizontal"
        android:weightSum="360">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80">
        </FrameLayout>

        <RadioGroup
            android:id="@+id/SelectActivity_radioGroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/SelectActivity_radioButton_goto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등원"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:button="@drawable/radio" />

            <RadioButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하원"
                android:layout_marginLeft="20dp"
                android:button="@drawable/radio" />

        </RadioGroup>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80">
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="32">
    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="192"
        android:orientation="horizontal"
        android:weightSum="360">
        <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15.5">
        </FrameLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="328.5"
            android:orientation="vertical"
            android:weightSum="192">

            <Spinner
                android:id="@+id/SelectActivity_spinner_teacher"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/editbox_1"
                android:layout_weight="48"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16">
            </FrameLayout>
            <Spinner
                android:id="@+id/SelectActivity_spinner_vehicle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="48"
                android:background="@drawable/editbox_1"/>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="32"/>
            <Button
                android:id="@+id/SelectActivity_button_start"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="운행시작"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_weight="48"
                android:background="@drawable/start_btn" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16">
        </FrameLayout>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="78.8">
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:text="COPYRIGHT 2019 INNO-CO. ALL RIGHTS RESERVED"
        android:textSize="10dp"
        android:gravity="center"
        android:textColor="#d8d8d8"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20.2">
    </FrameLayout>

</LinearLayout>
